<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
   <!-- bellow configuration is for InsertStudentController  -->
  <servlet>
  		<servlet-name>register</servlet-name>
  		<servlet-class>com.infosys.servlet_simple_demo.controller.InsertStudentController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>register</servlet-name>
  		<url-pattern>/registerStudent</url-pattern>
  </servlet-mapping>
  
  <!-- bellow configuration is for AppendToExcelStudentController  -->
  <servlet>
  		<servlet-name>message</servlet-name>
  		<servlet-class>com.infosys.servlet_simple_demo.controller.AppendToExcelStudentController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>message</servlet-name>
  		<url-pattern>/studentMessage</url-pattern>
  </servlet-mapping>
  <!-- bellow configuration is for AppendToExcelStudentController  -->
  <servlet>
  		<servlet-name>login</servlet-name>
  		<servlet-class>com.infosys.servlet_simple_demo.controller.StudentLoginController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>login</servlet-name>
  		<url-pattern>/loginStudent</url-pattern>
  </servlet-mapping>
  
  
  <!-- bellow configuration is for StudentDeleteController  -->
   <servlet>
  		<servlet-name>delete</servlet-name>
  		<servlet-class>com.infosys.servlet_simple_demo.controller.StudentDeleteController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>delete</servlet-name>
  		<url-pattern>/deleteStudent</url-pattern>
  </servlet-mapping>
  
</web-app>
